<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.surePopupControl">
   <children>
      <Label layoutX="65.0" layoutY="45.0" text="Etes vous sur de vouloir continuer ?">
         <font>
            <Font name="Century Gothic Bold" size="22.0" />
         </font>
      </Label>
      <Button fx:id="Oui" layoutX="121.0" layoutY="115.0" mnemonicParsing="false" onAction="#ouiAction" prefHeight="52.0" prefWidth="52.0" style="-fx-background-radius: 200; -fx-background-color: green;">
         <graphic>
            <FontAwesomeIcon fill="WHITE" glyphName="CHECK" size="2.5EM" />
         </graphic></Button>
      <Button fx:id="Non" layoutX="328.0" layoutY="115.0" mnemonicParsing="false" onAction="#nonAction" prefHeight="52.0" prefWidth="52.0" style="-fx-background-radius: 200; -fx-background-color: red;">
         <graphic>
            <FontAwesomeIcon fill="WHITE" glyphName="CLOSE" size="2.5EM" />
         </graphic>
      </Button>
   </children>
</AnchorPane>
